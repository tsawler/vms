<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dwr PUBLIC "-//GetAhead Limited//DTD Direct Web Remoting 0.4//EN" "http://www.getahead.ltd.uk/dwr/dwr.dtd">

<dwr>
  <allow>
    <create creator="new" javascript="Validator" scope="application">
      <param name="class" value="com.verilion.object.jsremoting.JavaScriptRemoting"/>
    </create>
    <create creator="new" javascript="Chat" scope="application">
      <param name="class" value="com.verilion.components.Chat"/>
    </create>
    <convert converter="bean" match="com.verilion.components.ChatMessage"/>
    <create creator="new" javascript="Effects" scope="application">
      <param name="class" value="com.verilion.object.jsremoting.Effects"/>
    </create>
  </allow>
</dwr>


